MENU = {
    "espresso": {
        "ingredients": {
            "water": 50,
            "coffee": 18,
        },
        "cost": 1.5,
    },
    "latte": {
        "ingredients": {
            "water": 200,
            "milk": 150,
            "coffee": 24,
        },
        "cost": 2.5,
    },
    "cappuccino": {
        "ingredients": {
            "water": 250,
            "milk": 100,
            "coffee": 24,
        },
        "cost": 3.0,
    }
}

resources = {
    "water": 300,
    "milk": 200,
    "coffee": 100,
    "money_in_machine" : 0.0
}

def machine_running():
    choice = input("What would you like? (espresso/latte/cappuccino): ")
    if choice == "off":
        print("\nMachine is now sleeping.")

    elif choice != "report" and choice != "off":
        print("Please insert coins.")
        quarters = int(input("How many quarters? "))
        dimes = int(input("How many dimes? "))
        nickles = int(input("How many nickles? "))
        pennies =int(input("How many pennies? "))
        money = quarters*0.25 + dimes*0.10 + nickles*0.05 + pennies * 0.01

    if choice == "espresso":
        price = MENU["espresso"]["cost"]
        if money >= price:
            money = money - price
            if resources["water"] < MENU["espresso"]["ingredients"]["water"]:
                print("Sorry, not enough water to make your order. Money refunded.")
                machine_running()
            if resources["coffee"] < MENU["espresso"]["ingredients"]["coffee"]:
                print("Sorry, not enough coffee to make your order. Money refunded.")
                machine_running()
            else:
                print(f"Here is ${money} in change.")
                print("Here is your espresso. Enjoy!")

                resources["water"] = resources["water"] - MENU["espresso"]["ingredients"]["water"]
                resources["coffee"] = resources["coffee"] - MENU["espresso"]["ingredients"]["coffee"]
                resources["money_in_machine"] = resources["money_in_machine"] + price
                machine_running()
        else:
            print("Sorry that's not enough money. Money refunded.")
            machine_running()

    elif choice == "latte":
        price = MENU["latte"]["cost"]
        if money >= price:
            money = money - price
            if resources["water"] < MENU["latte"]["ingredients"]["water"]:
                print("Sorry, not enough water to make your order. Money refunded")
                machine_running()
            if resources["coffee"] < MENU["latte"]["ingredients"]["coffee"]:
                print("Sorry, not enough coffee to make your order. Money refunded.")
                machine_running()
            if resources["milk"] < MENU["latte"]["ingredients"]["milk"]:
                print("Sorry, not enough milk to make your order. Money refunded.")
                machine_running()
            else:
                print(f"Here is ${money} in change.")
                print("Here is your latte. Enjoy!")

                resources["water"] = resources["water"] - MENU["latte"]["ingredients"]["water"]
                resources["coffee"] = resources["coffee"] - MENU["latte"]["ingredients"]["coffee"]
                resources["money_in_machine"] = resources["money_in_machine"] + price
                machine_running()
        else:
            print("Sorry that's not enough money. Money refunded.")
            machine_running()
    elif choice == "cappuccino":
        price = MENU["cappuccino"]["cost"]
        if money >= price:
            money = money - price
            if resources["water"] < MENU["cappuccino"]["ingredients"]["water"]:
                print("Sorry, not enough water to make your order. Money refunded.")
                machine_running()
            if resources["coffee"] < MENU["cappuccino"]["ingredients"]["coffee"]:
                print("Sorry, not enough coffee to make your order. Money refunded.")
                machine_running()
            if resources["milk"] < MENU["cappuccino"]["ingredients"]["milk"]:
                print("Sorry, not enough milk to make your order. Money refunded.")
                machine_running()
            else:
                print(f"Here is ${money} in change.")
                print("Here is your cappuccino. Enjoy!")

                resources["water"] = resources["water"] - MENU["cappuccino"]["ingredients"]["water"]
                resources["coffee"] = resources["coffee"] - MENU["cappuccino"]["ingredients"]["coffee"]
                resources["money_in_machine"] = resources["money_in_machine"] + price
                machine_running()
        else:
            print("Sorry that's not enough money. Money refunded.")
            machine_running()

    elif choice == "report":
        print("Water: " + str(resources["water"]))
        print("Milk: " + str(resources["milk"]))
        print("Coffee: " + str(resources["coffee"]))
        print("Money: " + str(resources["money_in_machine"]))
        machine_running()
        
machine_running()
